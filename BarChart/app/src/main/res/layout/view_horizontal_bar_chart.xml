<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:padding="20dp">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/textLabel"
        app:layout_constraintBottom_toBottomOf="@id/textLabel"
        app:layout_constraintEnd_toStartOf="@id/textLabel"
        tools:background="@android:drawable/ic_menu_info_details"
        tools:visibility="visible"/>
    <TextView
        android:id="@+id/textLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgIcon"
        tools:text="Label"/>
    <ImageView
        android:id="@+id/imgCautionIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_menu_info_details"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/textLabel"
        app:layout_constraintBottom_toBottomOf="@id/textLabel"
        app:layout_constraintStart_toEndOf="@id/textLabel"
        tools:visibility="visible"/>
    <ImageView
        android:id="@+id/imgTrackBar"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="#dddddd"
        app:layout_constraintTop_toBottomOf="@id/textLabel"
        app:layout_constraintStart_toStartOf="@id/imgIcon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/imgValueBar"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="#80ffff00"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/imgTrackBar"
        app:layout_constraintBottom_toBottomOf="@id/imgTrackBar"
        app:layout_constraintStart_toStartOf="@id/imgTrackBar"
        tools:layout_width="100dp"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>